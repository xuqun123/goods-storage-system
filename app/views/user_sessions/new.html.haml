= simple_form_for User.new, url: create_session_url do |f|
  = f.input :email

  .form-group.password.required.user_password
    %label.password.required{:for => "user_password"}
      Password
      %abbr{:title => "required"} *
    = f.password_field :password, class: 'form-control string email required'

  = f.button :submit, 'Login', class: 'btn btn-primary'